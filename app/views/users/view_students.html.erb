<% content_for :thead do %>
  <th>#</th>
  <th>Name</th>
  <th></th>
<% end %>

<% content_for :tbody do %>
  <% @collection.each do |student| %>
    <tr>
      <td>
        <%= student.id %>
      </td>
      <td>
        <%= student.name %>
      </td>
      <td>
        <%= link_to(
          remove_student_path(i_id: current_user.id, s_id: student.id),
          method: :delete,
          data: {
            toggle: 'tooltip',
            title: 'Remove',
            placement: 'top'
          }
        ) do %>
          <span class="glyphicon glyphicon-remove"></span>
        <% end %>
      </td>
    </tr>
  <% end %>
<% end %>
